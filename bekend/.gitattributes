# Auto detect text files and perform LF normalization
* text=auto eol=lf

# JS/TS files
*.js text
*.jsx text
*.ts text
*.tsx text

# JSON files
*.json text

# YAML files
*.yml text
*.yaml text

# Config files
*.config.js text
.env.example text

# Documentation
*.md text
*.txt text

# Graphics
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.svg text

# Fonts
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitmodules export-ignore 